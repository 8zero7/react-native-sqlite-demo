{
  "name": "RNSQLiteDemo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest",
    "tsc": "tsc",
    "test:e2e": "detox test",
    "test:e2e:reuse": "detox test --reuse",
    "test:e2e:build": "detox build"
  },
  "dependencies": {
    "react": "16.6.0-alpha.8af6728",
    "react-native": "0.57.4",
    "react-native-sqlite-storage": "^3.3.7"
  },
  "devDependencies": {
    "@types/jest": "23.3.7",
    "@types/react": "16.4.18",
    "@types/react-native": "0.57.7",
    "@types/react-native-sqlite-storage": "^3.3.1",
    "@types/react-test-renderer": "16.0.3",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "23.6.0",
    "detox": "^9.1.2",
    "jest": "23.6.0",
    "metro-react-native-babel-preset": "0.48.1",
    "prettier": "^1.14.3",
    "react-test-renderer": "16.6.0-alpha.8af6728",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-react": "^3.6.0",
    "typescript": "3.1.3"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.jest.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  },
  "detox": {
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/RNSQLiteDemo.app",
        "build": "xcodebuild -workspace ios/RNSQLiteDemo.xcworkspace -scheme RNSQLiteDemo -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone X"
      }
    },
    "test-runner": "jest"
  }
}
